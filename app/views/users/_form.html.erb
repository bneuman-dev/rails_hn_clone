<%= form_for(@user) do |f| %>
  <p><%= f.label :email, "Email" %>
     <%= f.text_field :email %></p>
  <p><%= f.label :password, "Password" %>
     <%= f.password_field :password %></p>
  <p><%= f.label :password_confirmation, "Confirm password" %>
     <%= f.password_field :password_confirmation %></p>
     <% if @user.id %>
        <%= f.submit "Edit" %>
     <% else %>
      <%= f.submit "Sign up" %>
     <% end %>
<% end %>
